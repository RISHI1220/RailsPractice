<div class="d-flex align-items-center justify-content-center">
  <h1 class="my-4">Show Page</h1>
</div>
<div class="d-flex flex-column align-items-center justify-content-center">
    <h4><%= @article.title %></h4>

    <p><%= @article.body %></p>
</div>
<div class="d-flex align-items-center justify-content-center my-4">
    <%= link_to "Home", root_path, class: "mx-5 btn btn-primary" %>

    <%= link_to "Edit", edit_post_path(@article.id), class: "mx-5 btn btn-primary" %>

    <%= link_to "Delete", delete_post_path(@article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "mx-5 btn btn-primary" %>

    <%= link_to "Back", :back , class: "mx-5 btn btn-primary" %>
</div>


<h2 class="my-4">Comments:</h2>

<div class="align-items-center justify-content-center">
  <% @article.comments.each do |comment| %>
    <ul>
      <li class="mb-2">
        <strong>Commenter:</strong>
        <%= comment.commenter %> <br>
        <strong>Comment:</strong>
        <%= comment.body %> <br>
      </li>
    </ul>   
  <% end %>
</div>


<h2 class="my-4">Add a comment:</h2>
<div class="align-items-center justify-content-center">
  <%= form_with model: [ @article, @article.comments.build ], url: create_comment_path(@article.id) do |f| %>
    <p class="my-3">
      <%= f.label :commenter , class: "fs-4" %><br>
      <%= f.text_field :commenter , class: "form-control" %>
    </p>
    <p class="my-3">
      <%= f.label :body , class: "fs-4" %><br>
      <%= f.text_area :body , class: "form-control" %>
    </p>
    <p class="my-3">
      <%= f.submit "New Comment" , class:"btn btn-primary" %>
    </p>
  <% end %>
</div>
